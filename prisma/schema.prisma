generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  emailHash     String?
  emailVerified DateTime?
  image         String?
  personId      String?        @unique
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  accounts      Account[]
  sessions      Session[]
  memberships   Membership[]
  person        Person?        @relation("ClaimedBy", fields: [personId], references: [id])
  claimRequests ClaimRequest[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model FamilySpace {
  id          String       @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  memberships Membership[]
  people      Person[]
  invitations Invitation[]
}

model Membership {
  id        String      @id @default(cuid())
  role      String      @default("VIEWER") // OWNER, EDITOR, VIEWER
  userId    String
  spaceId   String
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  space     FamilySpace @relation(fields: [spaceId], references: [id], onDelete: Cascade)

  @@unique([userId, spaceId])
}

model Person {
  id            String         @id @default(cuid())
  firstName     String
  lastName      String
  firstNameAr   String?
  lastNameAr    String?
  nickname      String?
  birthYear     Int?
  deathYear     Int?
  bio           String?
  photoUrl      String?
  gender        String?        // "male", "female", "other", null
  isPrivate     Boolean        @default(false)
  hideBirthYear Boolean        @default(false)
  tags          String?        // JSON array of tags
  spaceId       String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  space         FamilySpace    @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  relationsFrom Relationship[] @relation("RelationFrom")
  relationsTo   Relationship[] @relation("RelationTo")
  claimedBy     User?          @relation("ClaimedBy")
  claimRequests ClaimRequest[]
}

model Relationship {
  id        String   @id @default(cuid())
  type      String   // PARENT_CHILD, SPOUSE
  subtype   String?  // "biological", "adoptive", "guardian", "step" for PARENT_CHILD; "married", "partner" for SPOUSE
  startYear Int?
  endYear   Int?
  fromId    String   // For PARENT_CHILD: parent; For SPOUSE: person A
  toId      String   // For PARENT_CHILD: child; For SPOUSE: person B
  spaceId   String
  createdAt DateTime @default(now())
  from      Person   @relation("RelationFrom", fields: [fromId], references: [id], onDelete: Cascade)
  to        Person   @relation("RelationTo", fields: [toId], references: [id], onDelete: Cascade)

  @@unique([fromId, toId, type])
}

model Invitation {
  id        String      @id @default(cuid())
  emailHash String?
  role      String      @default("VIEWER")
  token     String      @unique
  spaceId   String
  used      Boolean     @default(false)
  expiresAt DateTime
  createdAt DateTime    @default(now())
  space     FamilySpace @relation(fields: [spaceId], references: [id], onDelete: Cascade)
}

model ClaimRequest {
  id        String   @id @default(cuid())
  userId    String
  personId  String
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@unique([userId, personId])
}
